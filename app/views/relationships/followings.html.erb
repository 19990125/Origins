<main>
 <div class="container">
  <h2 class="title">フォローユーザーリスト</h2>
 </div>
  <div class="container">
   <% if @users.exists? %>
    <% @users.each do |user| %>
        <td><%= link_to user_path(user.id) do %>
            <%= attachment_image_tag user, :image, size: "100x100", class:"icon",fallback: "virender-singh-hE0nmTffKtM-unsplash.jpg" %>
            <% end %></td>
        <td><%= link_to user_path(user.id) do %>
            <%= user.nick_name %>
            <% end %></td>
  </div>
  <div class="introduction">
    <td><%= user.introduction %></td>
  </div>
    <% end %>
<% else %>
  <p class="nouser">ユーザーはいません</p>
<% end %>